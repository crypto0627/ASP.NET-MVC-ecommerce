@model Menu.Models.Dish

@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Home.css" rel="stylesheet" />
<script src="/js/Home.js"></script>
<div class="text-center">
    <h2>Create a New Dish</h2>
</div>
@using (Html.BeginForm("Create", "Menu", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageUrl)
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-4">Submit</button>
}

<div class="text-center mt-lg-5">
    <h2>Delete a Dish</h2>
</div>
@using (Html.BeginForm("Delete", "Menu", FormMethod.Post))
{
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="dishNameInput" class="form-control" id="dishName" />
        <div id="suggestions"></div>
    </div>
    <button type="submit" class="btn btn-danger mt-4">Delete</button>
}
